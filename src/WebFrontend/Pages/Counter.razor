@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="space-y-6">
    <div>
        <h1 class="text-3xl font-semibold text-foreground">Counter</h1>
        <p role="status" class="text-foreground mt-4">Current count: @CurrentCount</p>
        <button 
            class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-offset-background transition-colors" 
            @onclick="IncrementCount">
            Click me
        </button>
    </div>
</div>
