@page "/weather"

<PageTitle>Weather</PageTitle>

<div class="space-y-6">
    <div>
        <h1 class="text-3xl font-semibold text-foreground">Weather</h1>
        <p class="text-muted-foreground mt-2">This component demonstrates fetching data from the server.</p>
    </div>

    @if (Forecasts == null)
    {
        <div class="flex items-center justify-center py-12">
            <p class="text-muted-foreground">Loading...</p>
        </div>
    }
    else
    {
        <div class="border border-border rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-muted">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider border-b border-border">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider border-b border-border" aria-label="Temperature in Celsius">Temp. (C)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider border-b border-border" aria-label="Temperature in Fahrenheit">Temp. (F)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider border-b border-border">Summary</th>
                    </tr>
                </thead>
                <tbody class="bg-background divide-y divide-border">
                    @foreach (var forecast in Forecasts)
                    {
                        <tr class="hover:bg-muted/50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">@forecast.Date.ToShortDateString()</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">@forecast.TemperatureC</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">@forecast.TemperatureF</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">@forecast.Summary</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
