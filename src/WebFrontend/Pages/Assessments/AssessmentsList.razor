@page "/assessments"
@namespace WebFrontend.Pages.Assessments
@using Web.Common.DTOs.Health

<PageTitle>Assessments</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-3xl font-bold mb-6">Assessments</h1>

    @if (IsLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="text-muted-foreground">Loading assessments...</div>
        </div>
    }
    else if (ErrorMessage != null)
    {
        <div class="bg-destructive/10 border border-destructive rounded-lg p-4 mb-4">
            <div class="text-destructive">@ErrorMessage</div>
        </div>
    }
    else if (Assessments == null || !Assessments.Any())
    {
        <div class="flex items-center justify-center py-12">
            <div class="text-muted-foreground">No assessments found</div>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var assessment in Assessments)
            {
                <div class="bg-card border rounded-lg p-6 hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                            <h2 class="text-xl font-semibold mb-2">@assessment.Hypothesis</h2>
                            <div class="flex items-center gap-4 text-sm text-muted-foreground mb-3">
                                <span>@assessment.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
                                <span class="inline-flex items-center gap-1">
                                    <span class="material-symbols-outlined text-sm">check_circle</span>
                                    <span>@(assessment.Confidence.ToString("P0")) confidence</span>
                                </span>
                            </div>
                        </div>
                        <a href="/assessments/@assessment.Id" 
                           class="text-primary hover:underline text-sm font-medium">
                            View Details â†’
                        </a>
                    </div>
                    
                    <div class="mb-3">
                        <div class="text-sm font-medium mb-1">Recommended Action:</div>
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 text-primary text-sm">
                            <span class="material-symbols-outlined text-sm">medical_services</span>
                            <span>@GetRecommendedActionDisplay(assessment.RecommendedAction)</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(assessment.Reasoning))
                    {
                        <div class="text-sm text-muted-foreground line-clamp-2">
                            @assessment.Reasoning
                        </div>
                    }

                    @if (assessment.Differentials != null && assessment.Differentials.Any())
                    {
                        <div class="mt-3 pt-3 border-t">
                            <div class="text-sm font-medium mb-2">Differential Diagnoses:</div>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var diff in assessment.Differentials.Take(3))
                                {
                                    <span class="px-2 py-1 bg-muted rounded text-xs">@diff</span>
                                }
                                @if (assessment.Differentials.Count > 3)
                                {
                                    <span class="px-2 py-1 text-xs text-muted-foreground">
                                        +@(assessment.Differentials.Count - 3) more
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>
