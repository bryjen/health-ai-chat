@using WebFrontend.Components.UI.Shared
@namespace WebFrontend.Components.UI.Dialog

@* Dialog content component - provides content to Dialog for provider rendering *@
@* This component doesn't render anything itself; rendering happens via DialogProvider *@
@* Empty render to ensure component initializes *@

@code {
    [CascadingParameter]
    public Dialog? ParentDialog { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool ShowCloseButton { get; set; } = true;

    [Parameter]
    public string? Class { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; } = new();

    protected override void OnInitialized()
    {
        if (ParentDialog != null)
        {
            // Register this content component's parameters with the parent dialog
            ParentDialog.RegisterContent(this);
        }
    }

    protected override void OnParametersSet()
    {
        // Ensure we're still registered after parameter changes
        if (ParentDialog != null)
        {
            ParentDialog.RegisterContent(this);
        }
    }

    public string GetContentClass()
    {
        // Content wrapper - positioning is handled by DialogProvider's outer div
        // JS animations adjust scale/opacity on the outer div
        var baseClasses = "bg-background grid w-full max-w-[calc(100%-2rem)] gap-4 rounded-lg border p-6 shadow-lg outline-none sm:max-w-lg";
        return ClassBuilder.Merge(baseClasses, Class);
    }

    public async Task HandleClose()
    {
        if (ParentDialog != null)
        {
            await ParentDialog.CloseAsync();
        }
    }
}
